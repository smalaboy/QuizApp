<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tech.smal.turkaf.HomeActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_toolbar_height"
        android:background="@color/primary"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="@string/app_name"
            android:textSize="24sp"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/btn_energy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_energy_height"
            android:layout_marginRight="4dp"
            android:paddingRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_energy"
            android:drawableEnd="@drawable/ic_energy_24dp"
            android:text="30"
            android:textColor="#fff"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btn_diamonds"
            android:background="@drawable/btn_energy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_energy_height"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="30"
            android:textColor="#fff"
            android:layout_marginRight="4dp"
            android:paddingRight="8dp"
            android:drawableEnd="@drawable/ic_plus_24dp"/>
        <Button
            android:id="@+id/btn_reputation"
            android:background="@drawable/btn_energy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_energy_height"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="30"
            android:paddingRight="8dp"
            android:textColor="#fff"
            android:drawableEnd="@drawable/ic_plus_24dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginBottom="16dp">
        <Button
            android:id="@+id/btn_new_game"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_game_height"
            android:layout_marginBottom="8dp"
            android:paddingStart="16dp"
            android:text="Nouveau jeu"
            android:drawableStart="@drawable/ic_plus_24dp"
            android:textColor="#fff"
            android:background="@drawable/btn_new_game"/>
        <Button
            android:id="@+id/btn_factory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_game_height"
            android:layout_marginBottom="8dp"
            android:text="Usine"
            android:paddingStart="16dp"
            android:drawableStart="@drawable/ic_factory_24dp"
            android:textColor="#fff"
            android:background="@drawable/btn_factory"/>
        <Button
            android:id="@+id/btn_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_game_height"
            android:background="@drawable/btn_bg_blue"
            android:text="Profil"
            android:paddingStart="16dp"
            android:drawableStart="@drawable/ic_person_white_24dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:isScrollContainer="true"
            android:layout_marginBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondaryDark"
                android:textColor="#fff"
                android:text="Invitations"
                android:gravity="center"
                android:textSize="18sp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_invitations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:isScrollContainer="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryDark"
                android:textColor="#fff"
                android:text="Derniers scores"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_scores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
